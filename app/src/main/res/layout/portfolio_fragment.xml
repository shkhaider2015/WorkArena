<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <include
            layout="@layout/portfolio_header"
            android:id="@+id/portfolio_header"/>

        <include
            layout="@layout/portfolio_description"
            android:id="@+id/portfolio_description"/>

        <include
            layout="@layout/portfolio_personal_info"
            android:id="@+id/portfolio_personal_info"/>

        <include
            layout="@layout/portfolio_rating_feedback"
            android:id="@+id/portfolio_feedback"/>


    </LinearLayout>











</ScrollView>
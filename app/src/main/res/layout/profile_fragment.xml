<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/frag_prof_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminateTint="@color/full_dark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_and_white_gradient">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:padding="0dp">



                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/frag_prof_pic"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/person_black_18dp"
                        app:civ_border_color="@color/full_dark"
                        app:civ_border_width="3dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="10"
                        app:civ_shadow_color="@color/full_dark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="20dp"/>



                </android.support.constraint.ConstraintLayout>

            </TableRow>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_info"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/light_gray"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/fullname"/>

                    <TextView
                        android:id="@+id/frag_prof_fullname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/email"/>

                    <TextView
                        android:id="@+id/frag_prof_email"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/country"/>

                    <TextView
                        android:id="@+id/frag_prof_country"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/city"/>

                    <TextView
                        android:id="@+id/frag_prof_city"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/street_address"/>

                    <TextView
                        android:id="@+id/frag_prof_address"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/gender"/>

                    <TextView
                        android:id="@+id/frag_prof_gender"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/harngton"
                        android:text="@string/empty"/>


                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/frag_prof_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </TableRow>


        </TableLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/header_background"
    android:background="@drawable/black_and_white_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/portfolio_header_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/person_black_18dp"
        android:background="@drawable/profile_image_border"
        android:contentDescription="@string/image_view"/>

    <TextView
        android:id="@+id/portfolio_header_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/name"
        android:fontFamily="@font/harngton"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/portfolio_header_profession"
        app:layout_constraintStart_toEndOf="@+id/portfolio_header_profile_pic" />

    <TextView
        android:id="@+id/portfolio_header_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pession"
        android:textSize="25sp"
        android:fontFamily="@font/harngton"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="192dp"
        app:layout_constraintStart_toEndOf="@id/portfolio_header_profile_pic"
        app:layout_constraintRight_toRightOf="@id/portfolio_header_profile_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>



</android.support.constraint.ConstraintLayout>